<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.example.motiv8me"> <!-- Ensure this matches your actual package name -->

    <!-- Permissions -->
    <uses-permission android:name="android.permission.SET_WALLPAPER" />
    <uses-permission android:name="android.permission.FOREGROUND_SERVICE" />
    <uses-permission android:name="android.permission.POST_NOTIFICATIONS" />
    <!-- FIX: Removed maxSdkVersion attribute -->
    <uses-permission android:name="android.permission.FOREGROUND_SERVICE_SPECIAL_USE" />

    <!-- Application -->
    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Motiv8Me"
        tools:targetApi="34"> <!-- This tools attribute is less critical -->

        <!-- MainActivity: Launcher Activity -->
        <activity
            android:name=".MainActivity"
            android:exported="true"
            android:theme="@style/Theme.Motiv8Me"
            android:launchMode="singleTop"> <!-- launchMode="singleTop" is fine -->
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- SettingsActivity -->
        <activity
            android:name=".SettingsActivity"
            android:exported="false"
            android:theme="@style/Theme.Motiv8Me"
            android:parentActivityName=".MainActivity"/> <!-- parentActivityName is fine -->

        <!-- ActiveModeActivity -->
        <activity
            android:name=".ActiveModeActivity"
            android:exported="false"
            android:theme="@style/Theme.Motiv8Me"
            android:parentActivityName=".MainActivity"/> <!-- parentActivityName is fine -->

        <!-- WallpaperService -->
        <service
            android:name=".WallpaperService"
            android:exported="false"
            android:foregroundServiceType="specialUse" />
        <!-- FIX: Removed android:permission attribute -->

    </application>

</manifest>