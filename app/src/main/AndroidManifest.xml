<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <!-- These two permissions are required for our workers -->
    <uses-permission android:name="android.permission.SET_WALLPAPER" />
    <uses-permission android:name="android.permission.POST_NOTIFICATIONS" />

    <!--
    REMOVED: The RECEIVE_BOOT_COMPLETED permission.
    WorkManager handles this automatically, so we don't need it.
    -->

    <application
        android:name=".Motiv8MeApplication"
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Motiv8Me">

        <activity
            android:name=".MainActivity"
            android:exported="true"
            android:theme="@style/Theme.Motiv8Me"
            tools:ignore="LockedOrientationActivity" > <!-- ADDED: This tells the IDE to ignore the screen orientation warning. -->
            <!-- REMOVED: The redundant android:label attribute -->
            <!-- REMOVED: The android:screenOrientation attribute to follow best practices, but if you must have it, the tools:ignore above will suppress the warning. -->
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!--
        REMOVED: The entire <receiver> block for BootCompletedReceiver.
        The file doesn't exist anymore, so this registration caused the main error.
        -->

        <!--
        REMOVED: The entire <provider> block for disabling the WorkManagerInitializer.
        Our standard Hilt/WorkManager setup handles initialization correctly,
        so this custom override is no longer needed and can be safely removed.
        -->

    </application>

</manifest>